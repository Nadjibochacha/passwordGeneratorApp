<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/rounded_bg"
            android:padding="24dp"
            android:layout_margin="24dp"
            android:elevation="8dp"
            android:layout_gravity="center"
            tools:ignore="ScrollViewSize">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ” Generate A Password"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#222222"
                tools:ignore="HardcodedText" />

            <!-- Input -->
            <EditText
                android:id="@+id/edit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Account Name"
                android:inputType="text"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#222"
                android:background="#cccccc78"
                android:textColorHint="#444"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/edit_num_chars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter the number of characters"
                android:inputType="numberDecimal"
                android:backgroundTint="#CCCCCC"
                android:padding="12dp"
                android:textColor="#222"
                android:background="#cccccc78"
                android:textColorHint="#444"
                tools:ignore="HardcodedText" />

            <!-- Generate Button -->
            <Button
                android:id="@+id/generate_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                tools:ignore="HardcodedText,OnClick"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Go back"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#03A9F4"
                tools:ignore="HardcodedText" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <!-- Copyright -->
            <TextView
                android:id="@+id/tv_copyright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2025 MED DEV - All Rights Reserved"
                android:textSize="12sp"
                android:textColor="#666666"
                android:gravity="center"
                android:autoLink="web"
                android:linksClickable="true"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
